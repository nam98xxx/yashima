  <div class="container-footer">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-xs-12">
        <div class="footer">
          <div class="footer__heading">
            <div class="footer__headingText footer__headingText{{content1.id}}">{{content1.heading}}</div>
          </div>
          <ul class="footer__description">
            <li class="footer__description1">{{content1.description1}}</li>
            <li class="footer__description1">{{content1.description2}}</li>
            <li class="footer__description1">{{content1.description3}}</li>
