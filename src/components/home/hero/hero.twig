
{% set uniqueId = "id_16908a57-aacf-4b0b-9f3b-47adf1836052" %}
{% set backgroundFixed = general_settings.fixed ? 'fixed' : 'scroll' %}
{% set backgroundColor = general_settings.background_color_enable ? 'background-color:' ~  general_settings.color ~  ';' : '' %}
{% set backgroundImage = general_settings.background_image_enable ? 'background-image: url(' ~  general_settings.image ~ 
');background-attachment:' ~  backgroundFixed ~  ';background-size:' ~  general_settings.size ~  ';' : '' %}

<section data-id="hero" class="pet-hero pos:relative z:9 mih:70vh pb:20px" css="{{ backgroundImage }}">
  <div class="core-overlay" css="background-color: {{ general_settings.overlay }}"></div>
  {% if general_settings.background_color_enable %}
    <svg class="pet-hero__svg pos:absolute l:50% trf:translateX(-50%) z:-1 w:100% miw:1000px h:70vh" viewBox="0 0 1440 632" fill="none" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="none">
      <path d="M0 0H1440V590.802C1163.5 681 1090.5 604.5 726 509C361.5 413.5 338.5 727.669 0 590.802V0Z" fill="{{ general_settings.color }}"/>
    </svg>
  {% endif %}
  <div class="container pet-hero__content pos:relative h:100% mih:70vh d:flex fld:column ai:center jc:center ta:center">
    {% if decorate.image_left %}
      <img class="pet-hero__decorate-1 pos:absolute b:14% l:15px maw:23%" src="{{ decorate.image_left }}" alt="">
    {% endif %}
    {% if decorate.image_right %}
      <img class="pet-hero__decorate-2 pos:absolute b:-20px r:15px maw:21%" src="{{ decorate.image_right }}" alt="">
    {% endif %}
    <div class="pet-hero__content-inner mb:15%">
      <h2 class="pet-hero__title fw:700 c:color-gray9-freeze" css={{ title.design }}>{{ title.text }}</h2>
      <div class="pet-hero__description c:color-gray9-freeze" css="{{ description.design }}">{{ description.text }}</div>
      <a href="{{ button.url }}" class="pet-hero__btn core-btn core-btn--primary">{{ button.text }}</a>
    </div>
  </div>
</section>
